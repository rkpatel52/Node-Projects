<%- include("../layouts/main", {
  title: "Contact - O5Dezigns",
  body: `



<style>
/* =========================
   CONTACT PAGE HERO (TOP)
========================= */
.contact-hero{
  background:
    radial-gradient(1200px 800px at 30% 10%, rgba(118,80,219,.35), transparent 55%),
    radial-gradient(900px 600px at 80% 0%, rgba(138,83,220,.25), transparent 55%),
    var(--bg2);
  color: var(--text);
  padding: 90px 0 300px; /* extra bottom space for the floating form */
  border-bottom: 1px solid var(--cardBorder);
}

.contact-hero-inner{
  text-align: center;
}

.contact-hero h1{
  margin: 0 0 12px;
  font-size: clamp(42px, 4vw, 70px);
  line-height: 1.05;
}

.contact-hero-sub{
  margin: 0;
  color: var(--muted);
  font-size: 16px;
  line-height: 1.7;
}

/* Make the white slab pull up into the hero */
.contact-slab{
  margin-top: -110px;
}

/* =========================
   SOCIAL ROW IN CONTACT INFO
========================= */
.contact-social-row{
  margin-top: 18px;
  padding-top: 14px;
  border-top: 1px solid rgba(21,20,34,.10);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16px;
}

html[data-theme="dark"] .contact-social-row{
  border-top: 1px solid rgba(255,255,255,.12);
}

.contact-social-label{
  font-weight: 700;
  font-size: 14px;
  color: rgba(21,20,34,.75);
}

html[data-theme="dark"] .contact-social-label{
  color: rgba(255,255,255,.78);
}

.contact-socials{
  display: flex;
  gap: 10px;
}

.contact-socials .soc{
  width: 34px;
  height: 34px;
  border-radius: 999px;
  display: grid;
  place-items: center;
  border: 1px solid rgba(21,20,34,.12);
  background: rgba(21,20,34,.05);
}

html[data-theme="dark"] .contact-socials .soc{
  border: 1px solid rgba(255,255,255,.14);
  background: rgba(255,255,255,.06);
}

.contact-socials .soc img{
  width: 14px;
  height: 14px;
  object-fit: contain;
  display: block;
}

/* Mobile */
@media (max-width: 980px){
  .contact-hero{ padding: 70px 0 70px; }
  .contact-slab{ margin-top: 0; }
  .contact-social-row{
    flex-direction: column;
    align-items: flex-start;
  }
}
</style>
  <!-- CONTACT HERO (TOP DARK AREA) -->
<section class="contact-hero">
  <div class="container contact-hero-inner">
    <h1>Feel free to get in touch</h1>
    <p class="contact-hero-sub">
      Every great design starts with a conversation. Get in touch with<br/>
      us and let’s create something exceptional together.
    </p>
  </div>
</section>


<!-- CONTACT SLAB (WHITE AREA + FLOAT FORM) -->
<section class="contact-slab">
  <div class="container contact-slab-inner">
    <div class="contact-float">
      <div class="contact-form-card">
        <h3>Leave your message</h3>

        <form class="contact-form" action="/api/contact" method="POST" id="contactForm">
  <div class="row2">
    <label>
      Name
      <input type="text" name="name" placeholder="Your Name" />
    </label>

    <label>
      Email
      <input type="email" name="email" placeholder="Your Email" />
    </label>
  </div>

  <label>
    Phone Number
    <input id="phone" type="tel" name="phone" placeholder="Phone number" />
  </label>

  <label>
    Subject
    <input type="text" name="subject" placeholder="Subject" />
  </label>

  <label>
    Message
    <textarea rows="5" name="message" placeholder="Message"></textarea>
  </label>

  <button class="btn-send" type="submit">Send Message</button>
</form>

      </div>
    </div>

 
    <div class="contact-info">
      <h2>Don’t Hesitate to contact us</h2>
      <p class="muted contact-info-sub">
        We’re always ready to listen, collaborate, and bring your ideas to life.
        Reach out today and let’s start creating something extraordinary together.
      </p>

      <div class="info-grid">
  <div class="info-card">
    <div class="info-ic ic1">
      <img src="/images/5.1.png" alt="Office" class="info-ic-img" />
    </div>
    <div>
      <div class="info-title">Office</div>
      <div class="info-text">35 Fountainhead Rd, ON, CA</div>
    </div>
  </div>

  <div class="info-card">
    <div class="info-ic ic2">
      <img src="/images/5.2.png" alt="Phone" class="info-ic-img" />
    </div>
    <div>
      <div class="info-title">Phone</div>
      <div class="info-text">+1 (647) 882 8193</div>
    </div>
  </div>

  <div class="info-card">
    <div class="info-ic ic3">
      <img src="/images/5.3.png" alt="Work Hours" class="info-ic-img" />
    </div>
    <div>
      <div class="info-title">Work Hours</div>
      <div class="info-text">Everyday 9AM - 7PM</div>
    </div>
  </div>

  <div class="info-card">
    <div class="info-ic ic4">
      <img src="/images/5.4.png" alt="Email" class="info-ic-img" />
    </div>
    <div>
      <div class="info-title">Email</div>
      <div class="info-text">o5dezigns@gmail.com</div>
    </div>
  </div>
</div>

    </div>
  </div>
</section>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/intl-tel-input@19.5.6/build/css/intlTelInput.css"
/>
<script src="https://cdn.jsdelivr.net/npm/intl-tel-input@19.5.6/build/js/intlTelInput.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/intl-tel-input@19.5.6/build/js/utils.js"></script>

<script>
  const phoneInput = document.querySelector("#phone");

  // ✅ STORE INSTANCE GLOBALLY
  window.iti = window.intlTelInput(phoneInput, {
    initialCountry: "auto",
    separateDialCode: true,
    preferredCountries: ["ca", "us", "in"],
    utilsScript:
      "https://cdn.jsdelivr.net/npm/intl-tel-input@19.5.6/build/js/utils.js",
    geoIpLookup: function (callback) {
      fetch("https://ipapi.co/json/")
        .then(res => res.json())
        .then(data => callback(data.country_code))
        .catch(() => callback("ca"));
    }
  });
</script>

<script src="/js/validators.js"></script>
`
}) %>
